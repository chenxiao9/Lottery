<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FruitActivityTheme" parent="AppTheme"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="manage_title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="manage_sub_title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="download_progress">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="max">100</item>
        <item name="progress">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#3498DB</item>
        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#3498DB</item>
        <item name="progress_reached_bar_height">2dp</item>
        <item name="progress_unreached_bar_height">1dp</item>
    </style>

    <style name="special_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/special_text</item>
    </style>

    <style name="news_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>
